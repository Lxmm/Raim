<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.adcc.raim.dao.UserDAO">
    <select id="queryAllUserInfo" parameterType="java.util.Map" resultType="com.adcc.raim.entity.User">
        SELECT * FROM r_user ORDER BY username ASC
    </select>


    <select id="findByUserNameAndPassword" parameterType="java.lang.String" resultType="com.adcc.raim.entity.User">
         SELECT * FROM r_user AS  u WHERE u.username = #{username} and u.password = #{password}
    </select>

    <select id="queryUserByName" parameterType="java.lang.String" resultType="com.adcc.raim.entity.User">
        SELECT * FROM r_user WHERE username = #{username}
    </select>


</mapper>